{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_name__",
  "version": "1.1.0",
  "description": "__MSG_description__",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "action": {
    "default_icon": {
      "16": "src/img/icon.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "src/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"]
    }
  ]
}
